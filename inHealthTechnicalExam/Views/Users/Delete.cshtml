@model inHealthTechnicalExam.DataAccessLayer.Models.User

<h1>Delete</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["UserDeleteFailed"] != null)
        {
            <p class="alert alert-danger">@TempData["UserDeleteFailed"]</p>
        }
        <div class="form-group">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control" disabled="disabled" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" disabled="disabled" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <form asp-action="Delete" asp-antiforgery="true">
                <input type="hidden" asp-for="ID" />
                <input type="submit" value="Delete" class="btn btn-info" />
                <span>|</span>
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
